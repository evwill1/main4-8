#include <iostream>

using namespace std;

int main() 
{
  double num1;
  double num2;
  double num3;
  int symbol;
  

  cout << "Enter first interger : " << endl;
  cin >> num1;
  cout << endl;

  cout << "Enter second interger : " << endl;
  cin >> num2;
  cout << endl;

  cout << "Enter operation to be performed : " << endl;
  cin >> symbol;
  cout << endl; 
  
  switch (symbol)
  {
    case '+':
      num3 = (num1 + num2);
      cout << num1 << "+" << num2 << "=" << num3 << endl; 
      break;

    case '-':
      num3 = (num1 - num2);
      cout << num1 << "-" << num2 << "=" << num3 << endl;
      break;

    case '*':
      num3 = (num1 * num2);
      cout << num1 << "*" << num2 << "=" << num3 << endl;
      break;

    case '/':
      num3 = (num1 / num2);
      if (num2 == 0)
      cout << "error";
      cout << num1 << "*" << num2 << "=" << num3 << endl;
      break;

   }

return 0;
}
